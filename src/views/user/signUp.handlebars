<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Sign Up</title>
  <link rel="shortcut icon" href="/media/images/logo/logo.png" />
  <!-- Bootstrap 4 -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
  <!-- custom css -->
  <link rel="stylesheet" href="/js/jquery-ui-1.12.1/jquery-ui.min.css" />
  <link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
  <a href="/" class="go-home">
    <i class="fas fa-home"></i>
  </a>
  <div class="mx-auto mt-5 col-8 col-lg-4 col-md-6 col-sm-7">
    <!-- w-login start -->
    <div class="w-login">
      <!-- panel-signup start -->
      <div class="w-panel panel-signup text-center active">
        <div class="text-left mb-3 digital-news"><a href="/"><img src="/media/images/logo/brand.png" height="50px"
              alt="logo RST - News" /></a>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="w-heading">
              <h3 class="text-left panel-title">Đăng ký ngay!</h3>
            </div>
            <form name="signupForm" id="signupForm" class="signupForm" action="/sign-up" method="POST">
              <div class="form-group wrap-input">
                <input type="text" class="form-control" name="fullname" placeholder="Họ và tên..."
                  value="{{data.info.fullname}}" />
                <span class="w-input"></span>
              </div>
              <div class="form-group wrap-input">
                <input type="text" class="form-control" name="birthday" placeholder="Ngày sinh..."
                  value="{{data.info.birthday}}" />
                <span class="w-input"></span>
              </div>
              <div class="form-group wrap-input">
                <input type="text" class="form-control" name="username" placeholder="Tên đăng nhập..."
                  value="{{data.info.username}}" />
                <span class="w-input"></span>
              </div>
              <div class="form-group wrap-input">
                <input type="email" class="form-control" name="email" placeholder="Email..."
                  value="{{data.info.email}}" />
                <span class="w-input"></span>
              </div>
              <div class="form-group wrap-input">
                <div class="pwd-mask">
                  <input type="password" class="form-control" name="password" placeholder="Mật khẩu..."
                    value="{{data.info.password}}" />
                  <span class="w-input"></span>
                  <span class="fa fa-eye-slash pwd-toggle"></span>
                </div>
              </div>

              <div class="mt-3 form-group d-flex justify-content-between">
                <label class="label-pick-role">
                  Là
                </label>
                <label for="reader" class="position-relative pl-3 checkbox-role text-left">
                  <input type="radio"
                    {{#if data.info}}{{#if (opt data.info.role '===' 'SUBSCRIBER' opt)}}checked{{/if}}{{else}}checked{{/if}}
                    name="role" id="reader" value="SUBSCRIBER" /><span class="label-reader-text">Độc
                    giả</span>
                </label>
                <label for="writer" class="position-relative pl-3 checkbox-role text-left">
                  <input type="radio" name="role" id="writer"
                    {{#if (opt data.info.role '===' 'WRITER' opt)}}checked{{/if}} value="WRITER" /><span
                    class="label-writer-text">Viết
                    bài</span>
                </label>
                <label for="editor" class="position-relative pl-3 checkbox-role text-left">
                  <input type="radio" name="role" id="editor"
                    {{#if (opt data.info.role '===' 'EDITOR' opt)}}checked{{/if}} value="EDITOR" /><span
                    class="label-editor-text">Biên
                    tập</span>
                </label>
              </div>

              <div class="form-group">
                <p class="term-policy text-muted small">
                  Tôi đã đồng ý <a href="#">điều khoản</a> và
                  <a href="#">chính sách</a>.
                </p>
              </div>
              <div class="form-group">
                <button class="btn btn-lg btn-primary w-button" type="submit">
                  Đăng ký
                </button>
              </div>
            </form>
            <a class="lnk-toggler" data-panel=".panel-login" href="/sign-in">Đã có tài khoản ?</a>
          </div>
        </div>
      </div>
      <!-- end panel-signup -->
    </div>
    <!-- end w-login -->
  </div>
  <!-- Bootstrap 4 -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
  <script src="/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
  <script src="/js/auth.js"></script>
  <script src="/js/signUp.js"></script>
  {{#if data.message.success}}
  <script>
    swal.fire({
      type: 'success',
      title: 'Success!',
      text: "{{data.message.success}}",
    })
  </script>
  {{/if}}
  {{#if data.message.error}}
  <script>
    swal.fire({
      type: 'error',
      title: 'Oops!',
      text: "{{data.message.error}}",
    })
  </script>
  {{/if}}
</body>

</html>
