    <div class="new-content col-lg-4 col-md-12 ">
      <div class="title-new"><span class="new-news">Tin mới nhất</span></div>
      <div style="overflow: hidden auto" class="slick-new-image bao-dien-tu-scrollbar">
        {{#each data.latestPosts}}

        <div class="new-post"
          style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)),  url(/media/images/posts/{{this.post_avatar_image}})">
          <a href="/post/{{this.post_alias}}">
            <div class="d-flex topic-post">
              <p class="topic">{{this.category_name}}</p>
              {{#if this.premium}}<span class="badge badge-warning p-2 ml-2">Premium</span>{{/if}}
            </div>

            <p class="title-post">
              {{this.post_title}}
            </p>
            <p class="date-post"><strong>Ngày đăng:</strong> <i class="date-post"></i>{{this.published_date}}</p>
          </a>
        </div>

        {{/each}}

      </div>

    </div>
  </div>
</section>
<section class="mid-body container mt-3">
  <div class="row">
    <div class="col-md-12 col-lg-4">
      <div class="top-10"><span>Top 10 chuyên mục</span></div>
      <div class="top-10-content bao-dien-tu-scrollbar">
        {{#each data.topCategoryWithPosts}}
        <div class="item-top-10">
          <a href="/post/{{this.alias}}">
            <div class=" row">
              <div class="col-md-6">
                <div class="image-item">
                  <img src="/media/images/posts/{{this.postAvatarImage}}" alt="">
                </div>
              </div>
              <div class="col-md-6">
                <div class="item-topic">
                  <span class="topic">
                    {{this.category.categoryName}}
                  </span>
                </div>
                <div class="item-title">
                  <span class="title">
                    {{this.postTitle}}
                  </span>
                </div>
                <div class="item-day">
                  <span class="day"><strong>Ngày đăng:</strong> <i
                      class="date-post">{{#viDate this.publishedDate}}{{/viDate}}</i></span>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="most-view-content container col-md-12 col-lg-8">
      <div class="most-view"><span>Xem nhiều nhất</span> </div>
      <div style="margin-top: 16px;" class="list-mv row bao-dien-tu-scrollbar">
        {{#each data.muchViewPosts}}

        <div class="mv col-md-4">
          <div class="item-most-view">
            <a href="/post/{{this.alias}}">
              <div class="mv-image">
                <img src="/media/images/posts/{{this.postAvatarImage}}" alt="">
                <div class="mv-topic" style="margin: -10px 0 0 10px;">
                  <span class="topic">
                    {{this.category.categoryName}}
                  </span>
                </div>
              </div>
              <div class="mv-title">
                <span class="title">
                  {{this.postTitle}}
                </span>
              </div>

              <div class="mv-day ">
                <span class="day">
                  <strong>Ngày đăng:</strong>
                  <i class="date-post">{{#viDate this.publishedDate}}{{/viDate}}</i>
                </span>
              </div>
            </a>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</section>
