<section class="top-body container mt-1">
  <div class="row">
    <!-- tag nổi bật và tin mới -->
    <div class="hightlight-content col-lg-8 col-md-12">
      <div class="tag-name mb-3">#Tags:
        <span>
          <a href="/tag/tag_sample">
            <span class="tag">Mecerdes</span>
          </a>
          <a href="/tag/tag_sample">
            <span class="tag">AVG</span>
          </a>
        </span>
      </div>
      <!-- slick image -->
      <div class="slick-image">
        {{#each data.highlightPosts}}

        <div class="item-hightlight">
          <a href="/post/{{this.alias}}">
            <div class="img-link">
              <img src="/media/images/posts/{{this.postAvatarImage}}" alt="">
            </div>
            <div class="img-content">
              <div class="d-flex topic-post align-items-start align-content-center">
                <p class="topic">{{this.category.categoryName}}</p>
                {{#if this.premium}}<span class="badge badge-warning p-2"
                  style="margin-top: -20px; z-index: 1;">Premium</span>{{/if}}
              </div>
              <p class="title-post">
                {{this.postTitle}}
              </p>
              <p class="date-post">Ngày đăng: <i>{{#viDate this.publishedDate}}{{/viDate}}</i></p>
            </div>
          </a>
        </div>

        {{/each}}

