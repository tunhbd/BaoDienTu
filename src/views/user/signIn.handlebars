<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Sign In</title>
  <link rel="shortcut icon" href="/media/images/logo/logo.png" />
  <!-- Bootstrap 4 -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
  <!-- custom css -->
  <link rel="stylesheet" href="/css/auth.css" />
  <link rel="stylesheet" href="/css/bao_dien_tu_scrollbar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">

</head>

<body>

  <a href="/" class="go-home">
    <i class="fas fa-home"></i>
  </a>
  <div class="mx-auto mt-5 col-8 col-lg-5 col-md-6 col-sm-7">
    <!-- w-login start -->
    <div class="w-login bao-dien-tu-scrollbar">
      <!-- panel-login start -->
      <div class="w-panel panel-login text-center active">
        <div class="w-heading">
          <h3 class="panel-title">Đăng Nhập</h3>
          <p>
            Chưa có tài khoản ?
            <a class="lnk-toggler" data-panel=".panel-signup" href="/sign-up">Tạo ngay!</a>
          </p>
        </div>
        <!-- social login buttons start -->
        <div class="row social-buttons">
          <div class="col-xs-4 col-sm-4 mt-1 mb-1">
            <a href="/auth/facebook" class="btn btn-lg btn-block btn-facebook">
              <i class="fab fa-facebook-f"></i>
            </a>
          </div>
          <div class="col-xs-4 col-sm-4 mt-1 mb-1">
            <a href="#" class="btn btn-lg btn-block btn-twitter">
              <i class="fab fa-twitter"></i>
            </a>
          </div>
          <div class="col-xs-4 col-sm-4 mt-1 mb-1">
            <a href="#" class="btn btn-lg btn-block btn-google">
              <i class="fab fa-google-plus-g"></i>
            </a>
          </div>
        </div>
        <!-- end social-buttons -->
        <div class="row loginOr">
          <div class="col-xs-12 col-sm-12">
            <hr class="hrOr" />
            <span class="spanOr">hoặc</span>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <form name="loginForm" id="loginForm" class="loginForm" action="/sign-in" method="POST">
              <div class="form-group wrap-input">
                <input value="{{data.ov.username}}" type="text" class="form-control" name="username"
                  placeholder="Tên đăng nhập..." />
                <span class="w-input"></span>
              </div>

              <div class="form-group wrap-input">
                <div class="pwd-mask">
                  <input value="{{data.ov.password}}" type="password" class="form-control password" name="password"
                    placeholder="Mật khẩu..." />
                  <span class="w-input"></span>
                  <span class="fa fa-eye-slash pwd-toggle"></span>
                </div>
              </div>
              <div class="row remember-row">
                <div class="col-xs-6 col-sm-6  d-flex justify-content-start">
                  <label class="checkbox text-left">
                    <input type="checkbox" value="remember-me" /><span class="label-text">Nhớ mật khẩu</span>
                  </label>
                </div>
                <div class="col-xs-6 col-sm-6">
                  <p class="forgotPwd">
                    <a class="lnk-toggler" data-panel=".panel-forgot" href="/forgot-password">Quên mật khẩu?</a>
                  </p>
                </div>
              </div>
              {{!-- {{#if (opt oldInfo.username '!==' '' opt)}}
              <div class="alert alert-danger" role="alert">
                Tên tài khoản hoặc mật khẩu chưa đúng.
              </div>
              {{/if}} --}}
              <!-- end remember-row -->
              <div class="form-group">
                <button class="btn btn-primary w-button" type="submit">
                  Đăng nhập
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- end panel-login -->
    </div>
    <!-- end w-login -->
  </div>
  <!-- Bootstrap 4 -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
  <script src="/js/auth.js"></script>
  <script src="/js/signIn.js"></script>
  {{#if data.message.success}}
  <script>
    swal.fire({
      type: 'success',
      title: 'Success!',
      text: "{{data.message.success}}",
    })
  </script>
  {{/if}}
  {{#if data.message.error}}
  <script>
    swal.fire({
      type: 'error',
      title: 'Oops!',
      text: "{{data.message.error}}",
    })
  </script>
  {{/if}}

</body>

</html>
