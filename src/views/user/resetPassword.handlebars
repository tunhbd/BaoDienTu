<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Change password</title>
  <link rel="shortcut icon" href="/media/images/logo/logo.png" />
  <!-- Bootstrap 4 -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
  <!-- custom css -->
  <link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
  <a href="/" class="go-home">
    <i class="fas fa-home"></i>
  </a>
  <div class="mx-auto mt-5 col-lg-4 col-md-6 col-sm-8">
    <!-- w-login start -->
    <div class="w-login">
      <!-- panel-forget start -->
      <div class="w-panel active panel-forgot">
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="w-heading">
              <h3 class="panel-title">Đổi mật khẩu</h3>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12">
                <form id="resetForm" name="resetForm" class="forgetForm" action="/reset-password/{{data.token}}"
                  method="POST">

                  <div class="form-group wrap-input">
                    <div class="pwd-mask">
                      <input type="password" class="form-control password" id="newPwd" name="newPwd"
                        value="{{data.info.newPwd}}" placeholder="Mật khẩu mới..." />
                      <span class="w-input"></span>
                      <span class="fa fa-eye-slash pwd-toggle"></span>
                    </div>
                  </div>
                  <div class="form-group wrap-input">
                    <div class="pwd-mask">
                      <input type="password" class="form-control password" id="confirmNewPwd" name="confirmNewPwd"
                        value="{{data.info.confirmNewPwd}}" placeholder="Xác nhận mật khẩu..." />
                      <span class="w-input"></span>
                    </div>
                  </div>

                  <div class="form-group mt-3">
                    <button class="btn btn-lg btn-primary w-button" type="submit">
                      Đổi Mật Khẩu
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end panel-forgot -->
    </div>
    <!-- end w-login -->
  </div>
  <!-- Bootstrap 4 -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
  <script src="/js/auth.js"></script>
  <script src="/js/resetPassword.js"></script>
  {{#if data.message.success}}
  <script>
    swal.fire({
      type: 'success',
      title: 'Success!',
      text: "{{data.message.success}}",
    })
  </script>
  {{/if}}
  {{#if data.message.error}}
  <script>
    swal.fire({
      type: 'error',
      title: 'Oops!',
      text: "{{data.message.error}}",
    })
  </script>
  {{/if}}
</body>

</html>
