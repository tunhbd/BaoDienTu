<div class="container">
  <div class="header">
  </div>
  <!-- content -->
  <div class="row content">
    <div class="col-md-8 list-content">
      <div class="title-category">
        <span>#Tag: {{data.tag.tagName}}</span>
      </div>
      {{!-- <div class="tag-name mb-2">Tags:
                <span>
                    <a href="#">

                        <span class="tag">Phạm Nhật Vũ</span>
                    </a>
                    <a href="#">

                        <span class="tag">AVG</span>
                    </a>
                </span>
            </div> --}}
      {{#each data.posts}}
      <div class="item-top-10">
        <a href="/post/{{this.alias}}">
          <div class="row">
            <div class="col-md-4">
              <div class="image-item position-relative">
                <div class="d-flex topic-post position-absolute" style="top: 10px; left: 10px;">
                  <p class="topic">{{this.category.categoryName}}</p>
                </div>
                <img src="/media/images/posts/{{this.postAvatarImage}}" alt="{{this.postTitle}}">
              </div>
            </div>
            <div class="col-md-8">
              <div class="item-title">
                <span class="title">{{#if this.premium}}<i class="fa fa-star"
                    aria-hidden="true"></i>{{/if}}{{this.postTitle}}</span>
              </div>
              <div class="item-description">
                <p>{{this.postSummary}}
                </p>
              </div>
              <div class="item-day">
                <span class="day"><strong>Ngày đăng:</strong> <i
                    class="date-post">{{#viDate this.publishedDate}}{{/viDate}}</i></span>
              </div>
              <div class="item-tags">
                <span class="tags-title">
                  <strong>Tags:</strong>
                  {{#each this.tags}}
                  <span class="badge badge-secondary p-1">{{this.tagName}}</span>
                  {{/each}}
                </span>
              </div>
            </div>
          </div>
        </a>
      </div>

      {{/each}}



    </div>
    <!-- post relative -->
    {{!-- <div id="right-cont" style="overflow: hidden;" class="col-md-4 post-relative">
      <div class="title-category-right"><span>Xem nhiều nhất</span></div>

