  <!-- <div class="container"> -->
  <div id="wrapper" class="panel">
    <section id="section-header" class="mt-2">
      <!-- login - register -->
      <div class="container">
        <div class="first-content d-flex justify-content-between">
          <div class="logo">
            <!-- <a href="#"><img src="media/images/logo.png" alt="img"></a> -->
          </div>
          {{#if user}}
          <div class="login-form">
            <i class="far fa-user">
              <span>
                <a href="/sign-in" class="login">Đăng nhập</a> | <a href="/sign-up" class="sign-up"> Đăng kí</a>
              </span>
            </i>
          </div>
          {{else}}
          <div id="homepage-avatar-user" class="rounded-circle overflow-hidden homepage-user-menu-is-collapse">
            <img src="/media/images/users/{{user.avatar}}" alt="" />
          </div>
          <div class="homepage-user-menu">
            <ul>
              <li class="homepage-user-menu__item">
                <a href="/profile" class="homepage-user-menu__item__content">
                  Your Profile <i class="fas fa-id-card-alt homepage-user-menu__item-icon"></i>
                  {{!-- <i class="user-menu__item__icon user-menu__item__icon-profile"></i> --}}
                </a>
              </li>
              <li class="homepage-user-menu__item">
                <a href="/change-password" class="homepage-user-menu__item__content">
                  Change Password <i class="fas fa-user-lock homepage-user-menu__item-icon"></i>
                  {{!-- <i class="user-menu__item__icon user-menu__item__icon-change-password"></i> --}}
                </a>
              </li>
              <li class="homepage-user-menu__item">
                <a href="/sign-out" class="homepage-user-menu__item__content">
                  Sign Out <i class="fas fa-sign-out-alt homepage-user-menu__item-icon"></i>
                  {{!-- <i class="user-menu__item__icon user-menu__item__icon-sign-out"></i> --}}
                </a>
              </li>
            </ul>
          </div>
          {{/if}}
        </div>
      </div>
      <div class="second-header mt-2">
        <!-- logo or Digital News -->
        <div class="content-search container d-flex justify-content-between">
          <div class="digital-news"><a href="/">TIN TỨC TTV</a></div>
          <form class="form-inline md-form form-sm mt-0" action="/search/result" method="GET">
            <input class="form-control form-control-sm ml-3" name="searchInput" type="text" placeholder="Tìm kiếm"
              aria-label="Search">
          </form>
        </div>
      </div>
      <!-- topic content -->
      <div class="third-header mt-2">
        <div class="container">
          <div href="#" class="btn-menu js-slideout-toggle"><i class="fas fa-bars"></i></div>
          <div class="menu-topic">
            <ul class="menu-list mt-3">
              <li class="menu-list-item"><a href="/"><i class="fas fa-home home-icon"></i></a></li>
              <li class="menu-list-item"><a href="/category/category_sample">Xã hội</a></li>
              <li class="menu-list-item dropdown"><a href="/category/category_sample" class="dropdown-toggle"
                  data-toggle="dropdown">Kinh tế<b class="caret"></b></a>
